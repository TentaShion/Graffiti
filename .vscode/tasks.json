{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "edit c++ in docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-it",
                "-v",
                "${workspaceRoot}/cpp:/home/worker",
                "gcc"
            ],
        },
        {
            "label": "edit swift in docker",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-it",
                "-v",
                "${workspaceRoot}/swift:/home/worker",
                "tshion/swift-repl:2019-12-02-a"
            ],
        }
    ]
}